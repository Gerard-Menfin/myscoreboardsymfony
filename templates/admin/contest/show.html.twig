{% extends 'base.html.twig' %}

{% block title %}Contest{% endblock %}

{% block body %}
    <h1>Contest</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contest.id }}</td>
            </tr>
            <tr>
                <th>Start_date</th>
                <td>{{ contest.startDate ? contest.startDate|date('Y-m-d') : '' }}</td>
            </tr>

            <tr>
                <th>Joueurs</th>
                <td>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Email</th>
                                <th>Nickname</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for player in contest.players %}
                            <tr>
                                <td>{{ player.id }}</td>
                                <td>{{ player.email }}</td>
                                <td>{{ player.nickname }}</td>
                              
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
            </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_contest_index') }}">back to list</a>

    <a href="{{ path('app_admin_contest_edit', {'id': contest.id}) }}">edit</a>

    {{ include('admin/contest/_delete_form.html.twig') }}
{% endblock %}
